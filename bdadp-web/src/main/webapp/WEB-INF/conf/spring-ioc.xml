  <aop:config expose-proxy="true">
    <aop:pointcut expression="execution(* com.chinasofti.ark.bdadp.service..*.*(..))"
      id="txPointcut"/>
    <aop:advisor advice-ref="txAdvice" pointcut-ref="txPointcut"/>
  </aop:config>

