<?xml version="1.0" encoding="UTF-8"?>
<component>
    <component-name>shell</component-name>
    <component-description>该组件可以用来上传并且执行脚本，可以设置上传脚本及设置工作目录
    </component-description>
    <component-class>com.test.SampleComponent</component-class>
    <component-icon>xxxx.jpg</component-icon>
    <params>
        <param>
            <name>file</name>
            <description>脚本文件</description>
            <type>file</type>
            <!-- file 对应前端的上传文件控件 -->
            <nullable>false</nullable>
        </param>
        <param>
            <name>uploadDir</name>
            <description>上传目录</description>
            <type>text</type>
            <!-- text 对应前端的文本框控件 -->
            <nullable>false</nullable>
        </param>
        <param>
            <name>cmd</name>
            <description>命令</description>
            <type>text</type>
            <nullable>false</nullable>
        </param>
        <param>
            <name>workDir</name>
            <description>工作目录</description>
            <type>text</type>
            <nullable>false</nullable>
            <defaultValue></defaultValue>
        </param>
        <param>
            <name>file_type</name>
            <description>文件类型</description>
            <type>options</type>
            <!-- options 对应前端的下拉列表框控件，需要设置至少一个option, param_name:file_type, default_options:CSV=0,Excel=1 -->
            <nullable>false</nullable>
            <defaultOptions>
                <option desc="CSV" name="csv" value="0"/>
                <option desc="EXCEL" name="excel" value="1"/>
            </defaultOptions>
        </param>
        <param>
            <name>password</name>
            <description>密码</description>
            <type>password</type>
            <!-- password 对应前端的密码控件，用于输入密码等敏感信息 -->
            <nullable>false</nullable>
        </param>
        <param>
            <name>port</name>
            <description>端口</description>
            <type>number</type>
            <!-- number 对应前端的数字输入控件，只能输入数字 -->
            <nullable>true</nullable>
        </param>
        <param>
            <name>date</name>
            <description>日期</description>
            <type>date</type>
            <!-- date 对应前端的日历控件，便于选取日期 -->
            <nullable>true</nullable>
        </param>
        <param>
            <name>hql</name>
            <description>HQL</description>
            <type>textarea</type>
            <!-- textarea 对应前端的文本域控件，便于输入大量文本 -->
            <nullable>false</nullable>
        </param>
        <param>
            <name>trimSpace</name>
            <description>是否去空格</description>
            <type>checkbox</type>
            <!-- checkbox 对应前端的checkbox控件, 默认选中是1，取消是0 -->
            <nullable>false</nullable>
        </param>
        <param>
            <name>sex</name>
            <description>性别</description>
            <!-- radio 对应前端的radio控件，ComponentConfig表中保存的是param_name:sex, default_options:Male=0;Female=1;TaskConfig表中保存的是param_id,param_value等于0或1 -->
            <type>radio</type>
            <nullable>false</nullable>
            <defaultOptions>
                <option name="Male" value="0"/>
                <option name="Female" value="1"/>
            </defaultOptions>
        </param>
        <param>
            <name>job</name>
            <description>职业</description>
            <!-- checkboxlist 对应前端的checkbox列表控件，和checkbox一样默认选中是1，取消是0， default_options:Programmer=0;Teacher=0;Worker=0;TaskConfig表中保存的是param_id,
                    param_value等于Programmer=1;Teacher=1;Worker=1 -->
            <type>checkboxlist</type>
            <nullable>false</nullable>
            <defaultOptions>
                <option name="Programmer" value="0"/>
                <option name="Teacher" value="1"/>
                <option name="Worker" value="2"/>
            </defaultOptions>
        </param>
    </params>
</component>
